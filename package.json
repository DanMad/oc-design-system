{
  "name": "root",
  "private": true,
  "description": "Open Colleges' Design System",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "rm -rf node_modules && yarn install && husky install && chmod +x .husky/* && lerna bootstrap --use-workspaces",
    "bootstrap-frozen": "rm -rf node_modules && yarn install --frozen-lockfile && husky install && chmod +x .husky/* && lerna bootstrap --use-workspaces",
    "build": "lerna exec -- rm -rf dist && lerna exec -- yarn build",
    "format": "sort-package-json && lerna exec -- sort-package-json && prettier --write \"**/*\"",
    "test": "jest",
    "test-coverage": "jest --coverage --colors"
  },
  "dependencies": {
    "@babel/runtime": "^7.15.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/eslint-parser": "^7.15.8",
    "@babel/eslint-plugin": "^7.13.16",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.2",
    "@babel/plugin-proposal-optional-chaining": "^7.14.2",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.15.0",
    "@babel/register": "^7.15.3",
    "@storybook/addon-actions": "^6.3.10",
    "@storybook/addon-essentials": "^6.3.10",
    "@storybook/addon-links": "^6.3.10",
    "@storybook/builder-webpack5": "^6.3.10",
    "@storybook/manager-webpack5": "^6.3.10",
    "@storybook/react": "^6.3.10",
    "@testing-library/react": "^12.1.2",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.175",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "autoprefixer": "^10.3.7",
    "babel-jest": "^27.2.4",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
